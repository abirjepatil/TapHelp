package com.scu.taphelp;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

/**
 * Servlet implementation class GmailLogin
 */
@WebServlet("/GmailLogin")
public class GmailLogin extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public GmailLogin() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		
		response.setContentType("application/json");
		PrintWriter out = response.getWriter();
		out.println("Gmail Authentication");
		//First Check if the Auth token is correct
		  VerifyAuthToken verifyUser = new VerifyAuthToken();
	       //Temporary
		  String userName = request.getParameter("USER_NAME");
		  String emailId = request.getParameter("EMAIL_ID");
		  String authToken = request.getParameter("AUTHTOKEN");
		  authToken= "ya29..twIhGtPtG2IOxBnHm55hl7cMRFQt0LNAsXeu5l36yivxpbsWya-EKKGkLa_G-bA3rA";
	      
	        System.out.println(verifyUser.verifyUser(authToken));
	        if(verifyUser.verifyUser(authToken))
	        {
	        	MySQLAccess checkGmailLogin= new MySQLAccess();
	        	if(checkGmailLogin.GoogleLogin(emailId))
	        	{
	        		out.println("[AUTH01] Success");
	        	}
	        	else
	        	{
	        		out.println("User Not Registered");
	        	}
	        }
	        else
	        {
	        	out.println("Invalid Auth Token");
	        }
		
	    out.close();
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
	}

}
